---
import "@fontsource/inter";

const experiences = (
  await Astro.glob("../../public/experience/*.md")
).reverse();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Rowan Murray - Junior Software Engineer</title>
  </head>
  <body>
    <h1>
      Hi, I'm Rowan.
      <br />
      <span>A junior software engineer based in Cambridge, UK.</span>
    </h1>
    <section>
      <h2>Experience</h2>
      {
        experiences.map((experience) => (
          <div class="experience">
            <div class="date">{experience.frontmatter.date}</div>
            <div>
              <h4>
                {experience.frontmatter.company}
                <br />
                <span>{experience.frontmatter.role}</span>
              </h4>
              <div class="experience-content">
                <experience.Content />
              </div>
            </div>
          </div>
        ))
      }
    </section>
  </body>
  <style>
    body {
      background-color: #252525;
      max-width: 544px;
      margin: 40px auto;
      color: #fff;
      font-family: "inter";
    }
    h1,
    h4 {
      margin: 0;
    }

    h2 {
      font-size: large;
    }

    h1 > span {
      opacity: 0.6;
    }

    .date {
      min-width: 160px;
      margin-right: 8px;
      opacity: 0.6;
    }
    .experience {
      display: flex;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    h4 > span {
      opacity: 0.6;
      font-size: smaller;
      font-weight: lighter;
    }

    section {
      margin-top: 48px;
    }
  </style>
</html>
