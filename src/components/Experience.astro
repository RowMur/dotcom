---
import type { MarkdownInstance } from "astro";

type Props = {
  experience: MarkdownInstance<Record<string, any>>;
};

const { experience } = Astro.props;
---

<div class="flex mb-[16px]">
  <div class="hidden sm:block min-w-[160px] mr-[8px] opacity-60 font-semibold">
    {experience.frontmatter.date}
  </div>
  <div>
    <h4 class="mb-2 font-bold">
      {experience.frontmatter.company}
      <br />
      <span class="opacity-60 text-sm font-medium"
        >{experience.frontmatter.role}<span class="sm:hidden"
          >, {experience.frontmatter.date}</span
        ></span
      >
    </h4>
    <div class="experience-content">
      <experience.Content />
    </div>
  </div>
</div>
