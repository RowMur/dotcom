---
export type PersonalProjectType = {
  title: string;
  subTitle: string;
  githubLink: string;
  imagePath?: string;
};

type Props = {
  personalProject: PersonalProjectType;
};

const { personalProject }: Props = Astro.props;
---

<a
  href={personalProject.githubLink}
  class="w-full p-4 flex rounded-xl bg-[#303030] hover:bg-[#404040] mb-4"
>
  {
    personalProject.imagePath && (
      <img src={personalProject.imagePath} class="max-h-12 mr-4 rounded-lg" />
    )
  }
  <div>
    <h3 class="font-bold">
      {personalProject.title}
    </h3>
    <p class="opacity-60 text-sm font-medium">{personalProject.subTitle}</p>
  </div>
</a>
